<!doctype html>
<html lang="en">

<head>
    <title>@ViewData["Title"]  - Pati Admin Paneli </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
          href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <!-- CSS Files -->
    <link href="~/admin/css/material-dashboard.min.css?v=2.1.2" rel="stylesheet" />
    <link href="~/admin/css/material-dashboard-next.css" rel="stylesheet" />
    <link href="~/admin/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

    <!--   Core JS Files   -->
    <script src="~/js/site.js"></script>
    <script src="~/admin/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="~/admin/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/admin/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="~/admin/js/plugins/bootstrap-notify.js"></script>
    <script src="~/admin/js/material-dashboard.js?v=2.1.2" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
</head>

<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white">
            <div class="logo">
                <a asp-action="Index" class="simple-text logo-mini">
                    <div class="p-1">
                        <i class="fas fa-paw mr-2"></i>Pati Yönetim Paneli
                    </div>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">
                            <i class="material-icons">home</i>
                            <p>Ana Sayfa</p>
                        </a>
                    </li>

                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Pets" ? "active" : "")">
                        <a class="nav-link" asp-action="Index" asp-controller="Pets">
                            <i class="material-icons">pets</i>
                            <p>Hayvanları Yönet</p>
                        </a>
                    </li>

                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Genus" ? "active" : "")">
                        <a class="nav-link" asp-action="Index" asp-controller="Genus">
                            <i class="material-icons">pets</i>
                            <p>Türleri Yönet</p>
                        </a>
                    </li>

                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")">
                        <a asp-action="Index" asp-controller="User" class="nav-link">
                            <i class="material-icons">supervisor_account</i>
                            <p>Üyeleri Yönet</p>
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Contact" ? "active" : "")">
                        <a asp-action="Index" asp-controller="Contact" class="nav-link">
                            <i class="material-icons">mark_email_unread</i>
                            <p>Mesajlar</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                    </div>
                </div>
            </nav>


            <div class="content">
                @if (TempData["notification"] != null)
                {
                    @Html.Raw(TempData["notification"])
                }
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, made with <i class="material-icons">favorite</i> by
                        <a href="https://github.com/sercanbayrambey/Pati.Web" target="_blank">IBT</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>

</html>

