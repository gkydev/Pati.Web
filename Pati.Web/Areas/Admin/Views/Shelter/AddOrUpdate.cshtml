@model ShelterDto

@{
    var isEdit = Model.ShelterId > 0;
    var title = isEdit ? "Barınağı Düzenle" : "Yeni Barınak Ekle";
}


@{
    ViewData["Title"] = title;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card card-user">
    <div class="card-header">
        <h5 class="card-title">@title</h5>
    </div>
    <div class="card-body">
        <form asp-action="@(isEdit ? "Update" : "Add")" method="post">
            <div class="row">
                <div class="col-md-12">
                    <input type="hidden" value="@Model.ShelterId" asp-for="@Model.ShelterId" />
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Barınak Adı:</label>
                                <input type="text" class="form-control" asp-for="ShelterName" required />
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success pull-left">Kaydet</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


