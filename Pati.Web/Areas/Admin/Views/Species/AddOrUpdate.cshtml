@model SpeciesDto

@{
    var isEdit = Model.GenusId > 0;
    var title = isEdit ? "Türü DÜzenle" : "Yeni Tür Ekle";
}


@{
    ViewData["Title"] = title;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card card-user">
    <div class="card-header">
        <h5 class="card-title">@title</h5>
    </div>
    <div class="card-body">
        <form asp-action="@(isEdit ? "Update" : "Add")" asp-controller="Species" method="post">
            <input type="hidden"  value="@Model.SpeciesId" asp-for="SpeciesId" />
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Tür Adı:</label>
                                <input type="text" class="form-control form-control-bordered" asp-for="SpeciesName" required />
                            </div>

                            <div class="form-group">
                                <label>Cinsi:</label>
                                <select class="form-control form-control-bordered" asp-for="GenusId" asp-items="ViewBag.Genusses" required>
                                    <option value="0">Seçiniz.</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-success pull-left">Kaydet</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


