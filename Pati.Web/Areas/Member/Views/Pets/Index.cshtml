@model List<PetDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!--Filtre Bölümü-->
    <div class="col-sm-3 filter-row">
        <!--Arama Çubuğu-->
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Arama Yap" aria-label="Arama Yap" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button">Ara</button>
            </div>
        </div>

        <!--Akordiyon Filtreleme-->
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button type="button" class="btn btn-link" data-toggle="collapse" id="collapseFilter" data-target="#collapseOne"><i class="fa fa-plus"></i> CİNSLER</button>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Kedi
                            </label>
                        </div>
                        <div class="form-check  border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Köpek
                            </label>
                        </div>
                        <div class="form-check  border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Kuş
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button type="button" class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo"><i class="fa fa-plus"></i> ######</button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button type="button" class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree"><i class="fa fa-plus"></i> ######</button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                        <div class="form-check border-bottom p-1 ml-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Barınaktaki Hayvanlar Card Sistemi-->
    <div class="col-sm filter-row">

        <div class="row  g-4">
            @if (Model.Count == 0)
            {
                <div class="col-sm-12 justify-content-center">
                    <div class="alert-info p-4 text-center my-2">Burada henüz bir şey yok :(</div>
                </div>
            }
            else
            {

                @foreach (var item in Model)
                {
                    <div class="col-sm-6 mb-2">
                        <div class="card h-100 shadow-lg">
                            <img src="https://www.dunyabulteni.net/images/resize/100/656x400/haberler/haber/2014/06/26/kedi11.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.PetName</h5>
                                <p class="card-text">@item.PetAdditionInfo</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item font-weight-bold">Cins: @item.Genus</li>
                                <li class="list-group-item font-weight-bold">Cinsiyet: @item.Gender</li>
                                <li class="list-group-item font-weight-bold">Yaş: @(DateTime.Now.Subtract(item.PetBirthDate).Days / (365.25 / 12))</li>
                            </ul>
                            <div class="card-body">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-block">Detaylar</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
        <div class="btn-toolbar mt-1 mb-3 justify-content-center" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group me-2" role="group" aria-label="First group">
                <button type="button" class="btn btn-outline-secondary">1</button>
                <button type="button" class="btn btn-outline-secondary">2</button>
                <button type="button" class="btn btn-outline-secondary">3</button>
                <button type="button" class="btn btn-outline-secondary">4</button>
            </div>
        </div>
    </div>
</div>

