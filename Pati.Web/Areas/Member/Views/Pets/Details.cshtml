@model PetDto
@{
    ViewData["Title"] = $"Detaylar - {Model.PetName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row pt-2">
        <div class="col-md-12">

            <div class="card mb-3 p-4">
                <div class="row g-0">
                    <div class="col-md-6">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">


                                @for (int i = 0; i < Model.Images.Count(); i++)
                                {
                                    <div class="carousel-item @(i==0 ? "active" : "")">
                                        <img src="@Model.Images[i]" class="d-block w-100" alt="..." style="max-height:500px;">
                                    </div>
                                }



                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="card-body">
                            <div class="card-header">
                                <h4 class="card-title">Hayvan Hakkında</h4>
                            </div>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Adı: @Model.PetName</li>
                                <li class="list-group-item">Yaş: @(Convert.ToInt32(DateTime.Now.Subtract(Model.PetBirthDate).Days / (365.25 / 12))) Aylık</li>
                                <li class="list-group-item">Tür: @Model.SpeciesName</li>
                                <li class="list-group-item">Cinsiyet: @Model.PetGender.GetDisplayName()</li>
                                <li class="list-group-item">Aşılar: @Model.PetVaccineInfo</li>
                                <li class="list-group-item">Boy: @Model.PetWeight cm</li>
                                <li class="list-group-item">Kilo: @Model.PetHeight kg</li>
                                <li class="list-group-item">Açıklama: @Model.PetAdditionInfo</li>
                            </ul>
                            <br />
                            <p class="card-text">   <strong>NOT:</strong>   Bu küçük dostumuzu sahiplenmek istiyorsanız bizi arayabilir veya <a href="#contact">bize ulaşın</a> formumuzu doldurarak bize ulaşabilirsiniz.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

