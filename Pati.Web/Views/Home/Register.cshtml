@model UserDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="shadow my-3 p-4 container" method="post" asp-action="Register">
    <h3 class="mb-3">Kayıt Ol</h3>

    <div class="row">

        <div class="col-sm-12">
            <div class="form-group">
                <label>E-Posta:</label>
                <input type="email" class="form-control" asp-for="UserMail" required />
            </div>
        </div>


        <div class="col-sm-6">
            <div class="form-group">
                <label>Şifre:</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group">
                <label>Şifre Tekrar:</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" required />
            </div>
        </div>


        <div class="col-sm-4">
            <div class="form-group">
                <label>Ad:</label>
                <input type="text" class="form-control" asp-for="UserFirstName" required />
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group">
                <label>Soyad:</label>
                <input type="text" class="form-control" asp-for="UserLastName" required />
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group">
                <label>Telefon:</label>
                <input type="tel" class="form-control" asp-for="UserPhoneNumber" maxlength="11" required />
            </div>
        </div>


        <div class="col-sm-6">
            <div class="form-group">
                <label>Şehir:</label>
                <select name="City" required class="form-control city-select">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group">
                <label>İlçe:</label>
                <select name="CountyId" required class="form-control county-select">
                    <option value="0">Seçiniz</option>
                </select>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="form-group">
                <label>Cinsiyet:</label>
                <select asp-for="UserSex" required class="form-control">
                    <option value="0">Kadın</option>
                    <option value="1">Erkek</option>
                </select>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="form-group">
                <label>Doğum Günü:</label>
                <input class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" type="date" required asp-for="UserBirthDate" />
            </div>
        </div>

    </div>

    <div>Hesabınız var mı? <a asp-action="Login">Giriş yap!</a></div>

    <div class="mt-2">
        <a class="btn btn-danger"> Geri Git</a>
        <button type="submit" class="btn btn-success float-right">Kayıt Ol</button>
    </div>
</form>


<script src="~/admin/js/cityCounty.js"></script>